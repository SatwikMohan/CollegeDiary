<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/ProfilePic"
            android:layout_width="170sp"
            android:layout_height="190sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42sp"
            android:background="@drawable/outline_shape"
            android:src="@drawable/enchant" />
        <ImageView
            android:id="@+id/EditPic"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:layout_below="@id/ProfilePic"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_edit_24" />

        <EditText
            android:id="@+id/SignUpEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EditPic"
            android:layout_marginStart="31dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="31dp"
            android:hint="Enter Name"
            android:inputType="text"
            android:textStyle="bold"
            android:textColor="#E94057"
            android:textColorHint="@color/black"
            tools:ignore="TouchTargetSizeCheck" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/SignUpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/SignUpEmail"
            android:layout_marginStart="31dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="31dp"
            android:hint="Enter Password"
            android:textStyle="bold"
            android:textColor="#E94057"
            android:textColorHint="@color/black"
            app:passwordToggleEnabled="true"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/ChooseBirthDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SignUpPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:src="@drawable/inputbirth" />

        <ImageView
            android:id="@+id/CheckMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SignUpPassword"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="81dp"
            android:src="@drawable/ic_baseline_check_24" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Proceed"
            android:layout_width="190sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ChooseBirthDay"
            android:layout_marginTop="28dp"
            android:layout_centerInParent="true"
            android:text="Proceed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_shape"
            />
    </RelativeLayout>

</ScrollView>