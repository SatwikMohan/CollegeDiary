<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.notifications.NotificationsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/MyProfilePic"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:src="@drawable/human"
            android:layout_margin="10dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/InfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MyProfilePic"
            android:layout_margin="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/profilenamehead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    />

                <TextView
                    android:id="@+id/MyProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:layout_below="@id/profilenamehead"
                    />

                <TextView
                    android:id="@+id/profilebirthhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birth Date:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_below="@id/MyProfileName"
                    android:layout_margin="5dp"
                    />

                <TextView
                    android:id="@+id/MyProfileBirthDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:layout_below="@id/profilebirthhead"
                    />

                <TextView
                    android:id="@+id/profileinterestshead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interests:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_below="@id/MyProfileBirthDate"
                    android:layout_margin="5dp"
                    />

                <TextView
                    android:id="@+id/MyProfileInterests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold|italic"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:layout_below="@id/profileinterestshead"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/LogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/InfoCard"
            android:layout_margin="10sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="Log OUT"
            android:textStyle="bold"
            />

    </RelativeLayout>

</ScrollView>