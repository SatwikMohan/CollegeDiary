<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/MeassageRecievedCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:backgroundTint="@color/white"
            android:layout_margin="12sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/UserRecieved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textSize="12sp"
                    android:layout_margin="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/Theme"
                    />

                <TextView
                    android:id="@+id/MessageRecievedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recieved"
                    android:textSize="18sp"
                    android:layout_margin="5sp"
                    android:textStyle="bold"
                    android:layout_below="@id/UserRecieved"
                    android:textColor="@color/black"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/MeassageSentCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            app:cardCornerRadius="10sp"
            android:layout_alignParentEnd="true"
            android:layout_margin="12sp">

            <RelativeLayout
                android:background="#4CAF50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/UserSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textSize="12sp"
                    android:layout_margin="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/Theme"
                    />

                <TextView
                    android:id="@+id/MessageSentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sent Msg"
                    android:textSize="18sp"
                    android:layout_margin="5sp"
                    android:textStyle="bold"
                    android:layout_below="@id/UserSend"
                    android:textColor="@color/black"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>